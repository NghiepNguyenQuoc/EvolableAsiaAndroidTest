<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardElevation="0dp"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/padding_dialog_medium_1"
            android:paddingRight="@dimen/padding_dialog_medium_1">

            <com.nghiepnguyen.evolableasiaandroidtest.widgets.RoundedImageView
                android:id="@+id/iv_coutry_flag"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/margin_dialog_medium_1"
                android:gravity="center"
                android:src="@mipmap/default_flag" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/iv_coutry_flag">

                <TextView
                    android:id="@+id/tv_country_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Viet Nam"
                    android:textColor="@color/cl_black_opacity"
                    android:textSize="@dimen/text_size_subhead" />

                <TextView
                    android:id="@+id/tv_country_spec"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_country_name"
                    android:text="Capital: Ha Noi\nPopulation: 92700000\nArea: 331212.0"
                    android:textColor="@color/cl_black_opacity"
                    android:textSize="@dimen/text_size_caption" />
            </RelativeLayout>

            <ImageView
                android:id="@+id/iv_go_detail"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@mipmap/right_arrow"
                android:scaleType="center" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>